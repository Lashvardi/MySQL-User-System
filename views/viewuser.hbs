{{#each rows}}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">View Users</li>
    <li class="breadcrumb-item active" aria-current="page">User Name: {{this.first_name}}</li>
  </ol>
</nav>
{{/each}}

<div class="view-user pt-5">


    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h3>{{this.first_name}} {{this.last_name}}</h3>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{this.first_name}}</th>
                        <th>{{this.last_name}}</th>
                        <th>{{this.email}}</th>
                        <th>{{this.phone}}</th>
                    </tr>
                </tbody>
            </table>
        </div>


        <div class="row">
            <div class="col">
                <b>Comments</b>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{this.comments}}
            </div>
        </div>
    </div>
    {{/each}}    
</div>